{
  "name": "@jhlee0409/elenchus-mcp",
  "version": "1.3.0",
  "description": "MCP server for Elenchus adversarial verification system - state management, context sharing, and orchestration for code verification loops",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "elenchus-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "README.ko.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "inspector": "npx @modelcontextprotocol/inspector dist/index.js",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "npm run build && vitest run --config vitest.integration.config.ts",
    "test:all": "npm run test && npm run test:integration"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "verification",
    "elenchus",
    "claude",
    "code-review",
    "adversarial-verification"
  ],
  "author": "Jack Lee <jhlee0409@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jhlee0409/elenchus-mcp.git"
  },
  "homepage": "https://github.com/jhlee0409/elenchus-mcp#readme",
  "bugs": {
    "url": "https://github.com/jhlee0409/elenchus-mcp/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@vscode/tree-sitter-wasm": "^0.3.0",
    "web-tree-sitter": "^0.26.3",
    "zod": "^3.23.0",
    "zod-to-json-schema": "^3.25.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^4.0.17",
    "typescript": "^5.0.0",
    "vitest": "^4.0.17"
  }
}
